CREATE TABLE innerspeaker
(id INTEGER PRIMARY KEY AUTOINCREMENT,
song_title TEXT,
length_seconds INTEGER);

CREATE TABLE lonerism
(id INTEGER PRIMARY KEY AUTOINCREMENT,
song_title TEXT,
length_seconds INTEGER);

CREATE TABLE currents
(id INTEGER PRIMARY KEY AUTOINCREMENT,
song_title TEXT,
length_seconds INTEGER);

CREATE TABLE the_slow_rush
(id INTEGER PRIMARY KEY AUTOINCREMENT,
song_title TEXT,
length_seconds INTEGER);

