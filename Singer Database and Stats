--display the number of top tracks from the "Currents" album
SELECT COUNT(top_tracks.song_title)
from top_tracks
join currents
on top_tracks.song_title = currents.song_title;

--display the top tracks song titles from the "Currents" album
SELECT top_tracks.song_title
from top_tracks
join currents
on top_tracks.song_title = currents.song_title;
